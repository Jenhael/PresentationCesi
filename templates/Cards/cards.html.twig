{% extends 'base.html.twig' %} {% block cards %}

<div class="card" onclick="navigateTo('card1')">
  <div class="container">
    <h4><b>Card 1</b></h4>
    <p>Some text..</p>
  </div>
</div>

<div class="card" onclick="navigateTo('card2')">
  <div class="container">
    <h4><b>Card 2</b></h4>
    <p>Some text..</p>
  </div>
</div>

<script>
  function navigateTo(card) {
    window.location = "{{ path(" + card + ") }}";
  }
</script>

<style>
  .card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    width: 40%;
    border-radius: 5px;
    margin: 20px;
    cursor: pointer;
  }

  .card:hover {
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
  }

  .container {
    padding: 2px 16px;
  }
</style>
{% endblock %}
